{
  "private": true,
  "scripts": {
    "dev": "npm run pug:dev & npm run webpack:demo",
    "build": "npm run pug:pro & npm run postcss:pro & npm run webpack:pro",
    "postcss": "NODE_ENV=production postcss ./demo/css/*.css -c ./postcss.config.js --no-map -b ./demo/css -x css -d ./public/css",
    "webpack:demo": "NODE_ENV=production webpack -w --config ./demo/webpack.config.js & webpack-dev-server --config ./demo/webpack.config.js",
    "webpack:dev": "NODE_ENV=development webpack -w & webpack -w --config ./demo/webpack.config.js & webpack-dev-server --config ./demo/webpack.config.js",
    "webpack:pro": "NODE_ENV=production webpack --display-used-exports",
    "pug:dev": "pug ./demo/src/pug -Pwo ./demo",
    "pug:pro": "pug ./demo/src/pug -o ./demo",
    "lint": "eslint --fix --ext .js ./src webpack.config.js"
  },
  "author": "kzhrk",
  "devDependencies": {
    "@babel/core": "^7.2.2",
    "@babel/plugin-syntax-object-rest-spread": "^7.2.0",
    "@babel/preset-env": "^7.3.1",
    "autoprefixer": "^9.4.7",
    "babel-loader": "^8.0.5",
    "cssnano": "^4.1.10",
    "eslint": "^5.13.0",
    "eslint-config-prettier": "^4.0.0",
    "eslint-plugin-prettier": "^3.0.1",
    "postcss-cli": "^6.1.1",
    "prettier": "^1.16.4",
    "pug-cli": "^1.0.0-alpha6",
    "selenium-webdriver": "^4.0.0-alpha.1",
    "uglifyjs-webpack-plugin": "^2.1.1",
    "watch": "^1.0.2",
    "webpack": "^4.29.3",
    "webpack-cli": "^3.2.3",
    "webpack-dev-server": "^3.1.14"
  },
  "dependencies": {
    "@webcomponents/webcomponentsjs": "^2.2.7"
  }
}
